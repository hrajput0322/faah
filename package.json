{
  "name": "faah-extension",
  "displayName": "Faah Failure Alert",
  "description": "Plays faah audio on test failures or lint errors.",
  "version": "0.0.1",
  "publisher": "hrajput0322",
  "engines": {
    "vscode": "^1.85.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/hrajput0322/faah"
  },
  "categories": ["Other"],
  "activationEvents": [
    "*"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "configuration": {
      "title": "Faah Extension",
      "properties": {
        "faah.enableOnTestFail": {
          "type": "boolean",
          "default": true,
          "description": "Play sound when terminal test fails."
        },
        "faah.enableOnLintError": {
          "type": "boolean",
          "default": true,
          "description": "Play sound when lint error detected after typing pause."
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run build",
    "build": "tsc -p ./",
    "watch": "tsc -watch -p ./"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "@types/vscode": "^1.85.0",
    "typescript": "^5.0.0"
  },
  "dependencies": {
    "play-sound": "^1.1.6"
  }
}